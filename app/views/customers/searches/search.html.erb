<div class="container">
	<div class="row">
		<%= render 'layouts/sidebar', products: @genre_status_products, gyms: @genre_status_gyms %><!-- サイドバーcol-xs-2 -->
		<div class="col-xs-8 col-xs-offset-1"><!-- 左右に余白、中央に配置 -->
			<% if params[:genre] == "item" %><!-- 検索フォームのプルダウンでITEMを選択した場合表示 -->
			<h2>Items</h2>
			<%= link_to "全#{@products.count}件" %>
			<%= paginate @products %>
			<div class="row">
				<% @products.each do |product| %>
				<%= link_to customers_product_path(product.id) do %>
				<div class="col-xs-4" style="border:1px solid #ddd; background:#eeeeee;">
					<div class="productbox">
						<%= image_tag product.product_picture_id.to_s,  size:"223x223" %><br>
						<%= product.product_brand.truncate(15) %><br>
						<%= product.product_name.truncate(30) %><br>
						<!-- 評価<= > --><br>
						<!-- 口コミ合計数<= > --><br>
						<!-- お気に入り<= > --><br>
						価格相場：<%= product.price_with_tax(product.product_price) %>円(税込)<br>
					</div>
				</div>
				<% end %>
				<% end %>
			</div>
			<%= link_to "全#{@products.count}件" %>
			<%= paginate @products %>

			<% elsif params[:genre] == "club" %><!-- 検索フォームのプルダウンでCLUBを選択した場合表示 -->
			<h2>Club</h2>
			<%= link_to "全#{@gyms.count}件" %>
			<%= paginate @gyms %>
			<div class="row">
				<% @gyms.each do |gym| %>
				<%= link_to customers_gym_path(gym.id) do %>
				<div class="col-xs-4" style="border:1px solid #ddd; background:#eeeeee;">
					<div class="productbox">
						<%= image_tag gym.gym_picture_id.to_s,  size:"223x223" %><br>
						<%= gym.gym_brand.truncate(15) %><br>
						<%= gym.gym_name.truncate(30) %><br>
						<!-- 評価<= > --><br>
						<!-- 口コミ合計数<= > --><br>
						<!-- お気に入り<= > --><br>
					</div>
				</div>
				<% end %>
				<% end %>
			</div>
			<%= link_to "全#{@gyms.count}件" %>
			<%= paginate @gyms %>
			<% end %>

		</div>
	</div>
</div>
