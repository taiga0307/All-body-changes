<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1"><!-- 左右に余白、中央に配置 -->
      <h2>予約内容入力</h2>
      <p>下記フォームの入力をお願いします。</p><br>
      <% if @reservation.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @reservation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model:@reservation, local: true, url: customers_reservations_confirm_path do |f| %>
      <table class="table_singup">
        <tbody>
          <tr>
            <th class="pa10px40px">ジム名</th>
            <td>
              <div class="field">
                <%= @gym.gym_name %>
                <%= f.hidden_field :gym_id, :value => @gym.id %>
              </div>
            </td>
          </tr>
          <tr>

          <tr>
            <th class="pa10px40px">予約日</th>
            <td>
              <div class="field">
                <%= f.date_field :start_date %>
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">お名前</th>
            <td>
              <div class="field">
                <%= f.text_field :full_name %>
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">メールアドレス</th>
            <td>
              <div class="field">
                <%= f.email_field :email %>
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">性別</th>
            <td>
              <div class="field">
                <%= f.radio_button :sex, :man %>　男性　
                <%= f.radio_button :sex, :woman %>　女性　
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">年齢</th>
            <td>
              <div class="field">
                <%= f.number_field :age, min: 16, max: 90 %>
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">住所</th>
            <td>
              <div class="field">
                郵便番号<br><%= f.text_field :postal_code %><br>
                住所<br><%= f.text_field :address %>
              </div>
            </td>
          </tr>
          <tr>
            <th class="pa10px40px">電話番号</th>
            <td>
              <div class="field">
                <%= f.telephone_field :tell %>
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="actions">
                <%= f.submit "確認画面に進む", class:"btn btn-success btn-lg" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

