<div class="container">
	<div class="row">
		<%= render 'layouts/sidebar', products: @genre_status_products, gyms: @genre_status_gyms %><!-- サイドバーcol-xs-2 -->
		<div class="col-xs-9"><!-- 左右に余白、中央に配置 -->
			<h1><%= @gym.gym_name %></h1>
			<div class="row" style="background:#222222; margin-top:40px; color:white;">
				<div class="col-xs-5">
					<div class="gymimage">
						<%= image_tag @gym.gym_picture_id.to_s,  size:"320x320" %><br>
					</div>
				</div>
				<div class="col-xs-7">
					<!-- 総合評価<= > --><br>
					<div class="gymbrand">
						<%= @gym.gym_brand %><br>
					</div>
            		<!-- 平均評価、クチコミ数 -->
            		<div id="star-rate-<%= @gym.id %>"></div>
            		<div><%= @gym.gym_comments.average(:gym_rate) %>点</div>
            		<div>口コミ<%= @gym.gym_comments.count.round(1) %>件</div>
            		<script>
              			$('#star-rate-<%= @gym.id %>').raty({
              			size: 36,
              			starOff: "<%= asset_path('star-off.png') %>",
              			starOn: "<%= asset_path('star-on.png') %>",
              			starHalf: "<%= asset_path('star-half.png') %>",
              			half: true,
              			readOnly: true,
              			score: <%= @gym.gym_comments.average(:gym_rate).to_f.round(1) %>,
              			//注目ポイント↑ 平均点を算出し、round関数で切り上げ
              			});
           			</script><br>

					<div class="gymdescription">
						<%= @gym.gym_description %><br>
					</div>
				</div>
			</div>
			<h3>アクセス情報</h3>
			<div class="row" style="margin-top:40px;">

				<div class="col-xs-6" >
				<!-- MAP -->
					<div class="gymmap">
            			<%= render 'customers/gyms/map', gym: @gym %>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="gympostalcode">
						〒 <%= @gym.gym_postal_code %><br>
					</div>
					<div class="gymaddress">
						<%= @gym.prefecture_code %>
						<%= @gym.address_city %>
						<%= @gym.address_street %>
					</div>
					<div class="gymtell">
						TEL：<%= @gym.gym_tell %><br>
					</div>
				</div>
			</div>


				<!-- 見学予約 -->


				<%= render 'customers/gym_comments/gym_comment', gym: @gym, gym_comment: @gym_comment, gym_comments: @gym_comments  %>

		</div>
	</div>
</div>