<header>
  <div class="container-name">
    <h4 class=name>ジム・フィットネスクラブ検索・スポーツ商品購入サイト</h4>

    <!-- 検索フォーム -->
      <%= form_with url: customers_searches_search_path, method: :get, local: true, class:"search_container" do |f| %>
      <!-- form_withは架空のカラムを使用する際に使用。情報を送信するためのヘルパーメソッド※form_forはデータを保存する必要がある時 ※form_tagはフォームに入力されたデータを保存する必要がない時 -->
        <%= f.select :genre, [["CLUB", "club"], ["ITEM", "item"]] %>
            <%= f.select :direction, [["部分一致","部分一致"], ["前方一致", "前方一致"], ["後方一致", "後方一致"], ["完全一致","完全一致"]] %>
        <!-- 配列[[ 選択肢の表示名1, 実際に送信されるデータ1 ], [ 選択肢の表示名1, 実際に送信されるデータ2 ]] -->
          <%= f.text_field :search, placeholder: "検索ワードを入力" %>
          <!-- 検索ワードを入力を入力するための架空カラム -->
          <%= button_tag "", class:"fa fa-search fa-lg", id:"search-box" %>
      <% end %>
  </div>

  <div class="container-header">
    <%= link_to image_tag("headericon.gif", id:"topaicon"), root_path, data: {"turbolinks" => false} %>

      <nav id="Header-Nav" class="header-nav">
          <% if customer_signed_in? %>
            <div class="nav-list"><%= link_to 'About', customers_homes_about_path, data: {"turbolinks" => false} %></div>
            <div class="nav-list"><%= link_to 'Top', root_path, data: {"turbolinks" => false} %></div>
            <div class="nav-list"><%= link_to 'マイページ', customers_mypage_path, data: {"turbolinks" => false}, class:"fas fa-user-cog" %></div>
            <div class="nav-list"><%= link_to 'お問い合わせ', new_customers_contact_path, data: {"turbolinks" => false}, class:"fas fa-user-check" %></div>
            <div class="nav-list"><%= link_to '商品一覧', customers_products_path, data: {"turbolinks" => false}, class:"fas fa-shopping-bag" %></div>
            <div class="nav-list"><%= link_to 'ジム一覧', customers_gyms_path, data: {"turbolinks" => false}, class:"fas fa-dumbbell" %></div>
            <div class="nav-list"><%= link_to 'ログアウト', destroy_customer_session_path, data: {"turbolinks" => false}, method: :delete, class:"fas fa-sign-out-alt" %></div>
          <% else %>
            <div class="nav-list"><%= link_to 'Top', root_path, data: {"turbolinks" => false} %></div>
            <div class="nav-list"><%= link_to 'About', customers_homes_about_path, data: {"turbolinks" => false} %></div>
            <div class="nav-list"><%= link_to ' 商品一覧', customers_products_path, data: {"turbolinks" => false}, class:"fas fa-shopping-bag" %></div>

            <div class="nav-list"><%= link_to ' ジム一覧', customers_gyms_path, data: {"turbolinks" => false}, class:"fas fa-dumbbell" %></div>

            <div class="nav-list"><%= link_to ' 会員登録', '/customers/sign_up', data: {"turbolinks" => false}, class:"fas fa-user-plus" %></div>

            <div class="nav-list"><%= link_to ' ログイン', new_customer_session_path, data: {"turbolinks" => false}, class:"fas fa-sign-in-alt" %></div>
          <% end %>
      </nav>
      <div id="Hamburger" class="hamburger">
        <div></div>
        <div></div>
        <div></div>
        <span class="menu">MENU</span>
      </div>
  </div>
</header>